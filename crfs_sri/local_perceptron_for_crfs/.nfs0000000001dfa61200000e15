#!/bin/bash

#task="loopy_chunking"
task="chunking"
# toy="toy"

for corpus in genia
do

#for algorithm in structured piecewise pseudo-max piecewise-pseudo-max
for algorithm in structured
do

python train.py --train_file ${toy}data/${corpus}.train --devel_file ${toy}data/${corpus}.devel --tagged_devel_file tagged/${corpus}.${task}.${algorithm}.devel.tagged --model_file models/${corpus}.${task}.${algorithm}.model --verbose --corpus ${corpus} --task ${task} --train_algorithm ${algorithm}
python apply.py --test_file ${toy}data/${corpus}.test --tagged_file tagged/${corpus}.${task}.${algorithm}.test.tagged --model_file models/${corpus}.${task}.${algorithm}.model --verbose --corpus ${corpus} --task ${task}

done

done


